<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/background">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:id="@+id/intro_container"
                      android:orientation="vertical">
                <TextView
                        android:layout_gravity="center"
                        android:text="@string/welcome"
                        android:textSize="32sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:paddingTop="50dp"
                        android:paddingBottom="50dp"/>
        </LinearLayout>
        <ProgressBar android:layout_width="75dp" android:layout_height="75dp" app:layout_constraintEnd_toEndOf="parent"
                     android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                     android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                     app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                     app:layout_constraintTop_toTopOf="@+id/intro_container" android:visibility="invisible"
                     android:id="@+id/introProgressBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>